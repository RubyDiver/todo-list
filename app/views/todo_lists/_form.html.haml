.row
  .col-md-12
    = form_for(@todo_list, :html => {class: "form-horizontal", role: "form"}) do |f|
      - if @todo_list.errors.any?
        .panel.panel-danger.col-md-offset-1
          .panel-heading
            %h2.panel-title
              = pluralize(@todo_list.errors.count, 'error')
              prohibited this todo list from being saved:
            
            .panel-body
              %ul
                - @todo_list.errors.full_messages.each do |msg|
                  %li
                    =msg
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :description
        = f.text_area :description
      .actions
        = f.submit 'Save'